<div class="well">
  <%= form_for @user do |f| %>
  <%= render "shared/errors", object: @user %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="control-group">
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
  </div>

  <% if logged_in? && current_user_is_admin? %>
    <div class="control-group">
      <%= f.label :user_type %>
      <%= f.text_field :user_type %>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.submit submit_button_text, class: "btn btn-primary" %>
  </div>
  <div class="control-group">
    <%= link_to "Cancel", user_path(@user), class: "btn btn-inverse" %>
  </div>

  <% end %>
</div>