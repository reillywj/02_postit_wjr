<div class="well">
  <%= form_for @user do |f| %>
  <%= render "shared/errors", object: @user %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if logged_in? && current_user_is_admin? %>
    <div class="control-group">
      <%= f.label :user_type %>
      <%= f.text_field :user_type %>
    </div>
  <% end %>

  <%= f.submit submit_button_text, class: "btn btn-primary" %>

  <% end %>
</div>