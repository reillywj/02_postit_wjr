
<div class='well'>
  <%= form_for @user do |f| %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="control-group">
    <%= f.label :password_digest, "Password" %>
    <%= f.password_field :password_digest %>
  </div>

  <%= f.submit submit_button_text, class: "btn btn-primary" %>

  <% end %>
</div>