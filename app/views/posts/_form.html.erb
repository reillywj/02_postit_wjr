<!-- Post form template -->
<% if @post.errors.any? %>
  <div class='row'>
    <div class='alert alert-error'>
      <h4><%= pluralize(@post.errors.size,"Error") %></h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg%></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class='well'>
<%= form_for @post do |f| %>
  <div class='control-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='control-group'>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class='control-group'>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    <br/>
  </div>
  <%= f.submit submit_text, class: "btn btn-primary" %>
<% end %>
</div>