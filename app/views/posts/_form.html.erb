<!-- Post form template -->
<%= render 'shared/errors', object: @post %>

<div class='well'>
<%= form_for @post do |f| %>
  <div class='control-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='control-group'>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class='control-group'>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    <br/>
  </div>

  <div class='control-group'>
    <%= f.label "Categories" %>
    <%= f.collection_check_boxes :category_ids, Category.all.sort_by{|cat| cat[:name].capitalize}, :id, :name do |cb| %>
      <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
  </div>

<!--   <div class='control-group'>
    <select multiple='multiple' name='post[options][]'>
      <option value='1'>option1</option>
      <option value='2'>option2</option>
    </select>
  </div> -->

  <%= f.submit submit_text, class: "btn btn-primary" %>
<% end %>
</div>