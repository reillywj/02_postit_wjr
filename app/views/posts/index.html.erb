<%= render 'shared/content_title', title: "All Posts" %>

<% @posts.each do |post| %>
  <div class = 'row'>
    <div class= 'well'>
      <%= render post.categories %>
      <h4><%= link_to post.title, post_path(post)%></h4>
      <p><%= post.description %></p>
      <p>
        <span class='quiet'>posted by </span><%= post.creator.username %>
        <small>at <%= post.created_at%></small>
      </p>
      <%= link_to pluralize(post.comments.size, "comment"), post_path(post) %>
    </div>
  </div>
<% end %>
