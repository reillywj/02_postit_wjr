<p class='lead'>
  <%= @post.title %>
</hr>
</p>
<h5>
  <span>By <%= @post.creator.username%></span>
  <small>at <%= @post.created_at%></small>
</h5>

<div class='row'>
  <div class='span8 well'>
    <p><%= @post.description %></p>
  </div>
</div>

<% if @post.comments.size > 0 %>
<h6><%= @post.comments.size %> Comments</h6>
<% end %>

<% @post.comments.each do |comment| %>
  <div class='row'>
    <div class='span8 well'>
      <p>
        <%= comment.body %>
        <span class='quiet'>from <%= comment.creator.username%></span>
      </p>

    </div>
  </div>
<% end %>

<div>
  <h6>This post falls under <%= pluralize(@post.categories.size, 'category')%></h6>
  <ul>
    <% @post.categories.each do |category| %>
      <li><%= link_to category.name, root_path%></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Go Back to Posts', posts_path %>